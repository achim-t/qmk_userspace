# Set default behavior to automatically normalize line endings.
* text=auto

# Force certain file types to have specific line endings
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.json text eol=lf
*.md text eol=lf
*.mk text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
Makefile text eol=lf

# Binary files
*.bin binary
*.hex binary
*.uf2 binary
*.jpg binary
*.png binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
